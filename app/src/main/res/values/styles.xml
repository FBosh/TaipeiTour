<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Styles-->

    <style name="toolbar">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="toolbar_title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:text">@string/text_testing</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="toolbar_button">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="recyclable_attraction_title" parent="toolbar_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="recyclable_attraction_info" parent="toolbar_title">
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/color_text_default</item>
    </style>

    <style name="tv_info">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/text_size_mid</item>
        <item name="android:padding">@dimen/padding_min</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">@string/text_testing</item>
    </style>

    <style name="divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_divider_gray</item>
    </style>

    <style name="divider_margin" parent="divider">
        <item name="android:layout_marginStart">@dimen/padding_default</item>
        <item name="android:layout_marginEnd">@dimen/padding_default</item>
    </style>

    <style name="recyclable_news_title" parent="toolbar_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <style name="recyclable_news_info" parent="toolbar_title">
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/color_text_default</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <style name="recyclable_api_title" parent="toolbar_title">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>
</resources>
